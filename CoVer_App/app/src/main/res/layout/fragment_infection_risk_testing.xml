<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.infection_status.InfectionRiskTesting">
    <FrameLayout
        android:layout_width="fill_parent" android:layout_height="fill_parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:src="@drawable/cover_background_2" android:scaleType="fitXY" />
    </FrameLayout>

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:paddingTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button

            android:id="@+id/infectedTestBtn"
            android:layout_gravity="center"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:text="Gefahrenkontakt ermittelt (Mockup)" />

        <Button
            android:id="@+id/notInfectedTestBtn"
            android:layout_gravity="center"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:text="kein Gefahrenkontakt ermittelt (Mockup)" />

        <Button
            android:id="@+id/btn_compareInfectionRisk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Infektionsrisiko überprüfen" />

    </LinearLayout>



</FrameLayout>